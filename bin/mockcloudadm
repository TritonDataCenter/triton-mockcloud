TOP=$(cd $(dirname $0)/../; pwd)
if [[ -x "$TOP/build/node/bin/node" ]]; then
    # Dev layout.
    $TOP/build/node/bin/node $TOP/lib/mockcloudadm/index.js  "$@"
else
    /opt/smartdc/mockcloud/node/bin/node /opt/smartdc/mockcloud/lib/mockcloudadm/index.js "$@"
fi
